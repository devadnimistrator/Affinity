<script >
    var loginFrm = function() {
        var loginData = {
            grant_type: 'password',
            username: $('#logUserName').val(),
            password: $('#logPassword').val()
        };
        login(loginData);
    }

    var regoFrm = function () {
        register($('#regUserName').val(),
                 $('#regPassword').val(),
                 $('#regPassword2').val()
                );

    }

    $(document).ready(function() {
        if (isLogged()) {
            var d = getLoginData();
            infoMesssage("<strong>Logged</strong> as <strong>" + d.username + "</strong>");
        } else {
            warningMesssage("<strong>Attention!<strong> You are not logged in.")
        }

        // Include Menu File
        $("#menu").load("menu.html");

    });

</script>

