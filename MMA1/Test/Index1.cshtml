                <div class="row">
                    <div class="col-md-6">
                        <h2>Login</h2>
                        <form id="loginForm">
                            <div class="row form-group">
                                <label for="logUserName" class="col-md-3">User Name</label>
                                <input id="logUserName" type="text" class="col-md-9" />
                            </div>
                            <div class="row form-group">
                                <label for="logPassword" class="col-md-3">Password</label>
                                <input id="logPassword" type="password" class="col-md-9" />
                            </div>
                            <div class="form-group row">
                                <a class="btn btn-primary col-sm-offset-3" ref="#" onclick="loginFrm();">Login</a>
                                <a class="btn btn-warning col-sm-offset-3" ref="#" onclick="logout();">Logout</a>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <h2>Register</h2>
                        <form id="registerForm">
                            <div class="row form-group">
                                <label for="regUserName" class="col-md-3">User Name</label>
                                <input id="regUserName" type="text" class="col-md-9" />
                            </div>
                            <div class="row form-group">
                                <label for="regPassword" class="col-md-3">Password</label>
                                <input id="regPassword" type="password" class="col-md-9" />
                            </div>
                            <div class="row form-group">
                                <label for="regPassword2" class="col-md-3">Confirm Password</label>
                                <input id="regPassword2" type="password" class="col-md-9" />
                            </div>
                            <div class="form-group row">
                                <a class="btn btn-primary col-sm-offset-3" ref="#" onclick="regoFrm();">Register</a>

                            </div>
                        </form>
                    </div>
